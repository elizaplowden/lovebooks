<div class="container">
  <div class="show-container">
    <div class="show-card-banner">
      <h2><%= @list.name %></h2>
    </div>
    <div class="show-card-content">
      <div class="book-container">
        <% books = @list.books %>
        <ul>
          <% books.each do |book| %>
            <li class="#">

              <%= book.image_url %>
              <%= book.title %>
              <%= book.author %>
              <%= book.isbn %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="show-card-links">

        <%= link_to 'Go back to books', books_path%>
      </div>
    </div>

  </div>
</div>


